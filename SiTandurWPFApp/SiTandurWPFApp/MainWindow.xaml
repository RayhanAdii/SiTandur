<Window x:Class="SiTandurWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiTandurWPFApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        <Border Background="#52A155" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-150,0,0,0">
            <Button x:Name="WelcomeBtn" Padding="32,8,32,8" Content="Welcome" Background="Transparent" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0" Click="WelcomeBtn_Click"/>
        </Border>
        <Border Background="#52A155" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="140,0,0,0">
            <Button x:Name="AdminDasborBtn" Padding="32,8,32,8" Content="Admin Dasbor" Background="Transparent" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0" Click="AdminDasborBtn_Click"/>
        </Border>
    </Grid>
</Window>
